extends base

block content
  if errorMessage 
    span=errorMessage
  form(method="POST")
    input(value=loggedInUser.name, placeholder="Name", name="name", type="text", required)
    input(value=loggedInUser.email, placeholder="Email", name="email", type="email", required)
    input(value=loggedInUser.username, placeholder="Username", name="username", type="text", required)
    input(value=loggedInUser.location, placeholder="Location", name="location", type="text", required)
    input(type="submit", value="Update Profile")